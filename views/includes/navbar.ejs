<style>
  .search-btn {
    background-color: #fe424d;
    color: white;
    border-radius: 25px;
    padding: 0 1rem;
  }
  .search-btn:hover {
    background-color: #fe424d;
    color: white;
  }
  .search-btn i {
    display: inline;
    margin-right: 0.5rem;
  }
  .search-input {
    border-radius: 25px;
    padding: 0.5rem 3rem;
    font-size: 1rem;
  }

  /* Default: show desktop search, hide mobile */
  .desktop-search {
    display: block;
  }

  @media (min-width: 601px) {
    .search-ip,
    .button {
      display: none;
    }
  }

  /* ✅ Mobile styles under 430px */
  @media (max-width: 600px) {
    .desktop-search {
      display: none; /* hide desktop search */
    }

    .mobile-search {
      display: flex;
      justify-content: center;
      margin: 0.5rem auto;
      width: 55%;
    }

    .mobile-search .search-ip {
      flex: 1;
      border-radius: 20px 0 0 20px;
      padding: 0.3rem 0.6rem;
      font-size: 0.9rem;
    }

    .mobile-search .button {
      border-radius: 0 20px 20px 0;
      padding: 0.3rem 0.8rem;
      font-size: 0.9rem;
      background-color: #fe424d;
      color: white;
    }

    .navbar-collapse {
      background-color: white; /* white background */
      padding: 1rem;
      border-radius: 0 0 10px 10px;
    }

    .navbar-collapse .nav-link {
      color: #000 !important;
    }
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <!-- Brand -->
    <a class="navbar-brand" href="/listings">
      <i class="fa-regular fa-compass"></i>
    </a>

    <!-- ✅ Mobile Search (only visible under 430px) -->
    <form action="/listings/search" class="d-flex mobile-search" role="search">
      <input
        class="form-control search-ip"
        type="search"
        name="q"
        placeholder="Where to?"
        aria-label="Search"
      />
      <button class="btn search-btn button" type="submit">
        <i class="fa-solid fa-magnifying-glass"></i>
      </button>
    </form>

    <!-- Toggler -->
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible Menu -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <!-- ✅ Desktop Search -->
      <div class="navbar-nav ms-auto desktop-search">
        <form action="/listings/search" class="d-flex" role="search">
          <input
            class="form-control me-2 search-input"
            type="search"
            name="q"
            placeholder="Search destinations"
            aria-label="Search"
          />
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>
      </div>

      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Airbnb your home</a>
        <% if (!currUser) { %>
        <a class="nav-link" href="/signup"><b>Sign up</b></a>
        <a class="nav-link" href="/login"><b>Login</b></a>
        <% } %> <% if (currUser) { %>
        <a class="nav-link" href="/logout"><b>Logout</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
